# Fichier .htaccess dans /public/
# Ce fichier est utilis√© si le document root pointe directement vers public/

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # üîí S√©curit√© : interdit l'acc√®s √† des r√©pertoires sensibles
    RewriteRule ^(\.\./)?(src|app|vendor|bootstrap|tests|config|\.env) - [F,L,NC]

    # ‚úÖ Si un fichier ou dossier existe, on le sert directement
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # ‚úÖ Sinon, on route vers index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Cache et MIME optimis√©s
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
</IfModule>

# S√©curiser les fichiers PHP
# <FilesMatch "\.php$">
#     Require all denied
# </FilesMatch>

# D√©sactiver l'√©num√©ration de r√©pertoire
Options -Indexes
