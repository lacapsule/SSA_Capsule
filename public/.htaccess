# Fichier /.htaccess (unique)

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ðŸ”’ SÃ©curitÃ© : interdit lâ€™accÃ¨s Ã  des rÃ©pertoires sensibles
    RewriteRule ^(src|app|vendor|bootstrap|tests|config|\.env) - [F,L,NC]

    # âœ… Si un fichier statique existe dans /public, on le sert directement
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -f
    RewriteRule ^(.*)$ public/$1 [L]

    # âœ… Sinon, on route vers index.php (dans /public)
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>

# Cache et MIME optimisÃ©s
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
</IfModule>

